{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sprite Designer",
  "version": "0.1.0",
  "identifier": "com.westonbeecroft.spritedesigner",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1421",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sprite Designer",
        "width": 1280,
        "height": 860,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**"
        ]
      }
    }
  },
  "bundle": {
    "active": false,
    "targets": "all"
  }
}
